{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": false,
    "incremental": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/interfaces": ["./interfaces/*"],
      "@/models": ["./models/*"],
      "@/services": ["./services/*"],
      "@/types": ["./types/*"]
    }
  },
  "plugins": [
    // Source Transformers
    {
      "transform": "transformer-module"
    },
    {
      "transform": "transformer2",
      "extraOption": 123
    },
    {
      "transform": "trans-with-mapping",
      "resolvePathAliases": true
    },
    {
      "transform": "esm-transformer",
      "isEsm": true
    },
    // Program Transformer
    {
      "transform": "transformer-module5",
      "transformProgram": true
    }
  ],
  "include": ["src/**/*", "src/environment.d.ts"],
  "exclude": ["node_modules", "dist"]
}
