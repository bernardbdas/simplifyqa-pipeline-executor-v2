{
  "name": "simplifyqa-pipeline-executor-v2",
  "version": "1.0.0",
  "description": "Connector/Extension to use in conjunction with SimplifyQA Pipelines.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node --transpile-only -r dotenv/config -r tsconfig-paths/register src/index.ts",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "concurrently \"ts-patch install -s\" \"husky install\"",
    "esbuild": "node esbuild.config.mjs",
    "build": "concurrently \"npm run clean\" \"npm run esbuild\"",
    "clean": "concurrently \"rimraf dist\"",
    "tsc": "tspc",
    "start": "node -r dotenv/config -r tsconfig-paths/register dist/index.js"
  },
  "author": "SIMPLIFY3X SOFTWARE PRIVATE LIMITED",
  "license": "ISC",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.12.0",
    "@types/node": "^22.7.5",
    "@types/q": "^1.5.8",
    "concurrently": "^9.0.1",
    "esbuild": "^0.24.0",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "azure-pipelines-task-lib": "^4.17.3",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
